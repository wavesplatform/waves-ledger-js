{
  "name": "@bancoin/ledger",
  "version": "3.2.0",
  "description": "Bancoin ladger lib for browser",
  "main": "lib/BancoinLedger.js",
  "types": "lib/BancoinLedger.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/bancoinplatform/bancoin-ledger-js.git"
  },
  "scripts": {
    "build": "tsc && node_modules/.bin/browserify lib/BancoinLedger.js -s BancoinLedgerJs -u @bancoin/signature-generator -u @ledgerhq/hw-transport-u2f -o dist/bancoin-ledger.js && npm run build_transport",
    "build_transport": "node_modules/.bin/browserify ./node_modules/@ledgerhq/hw-transport-u2f/lib/TransportU2F.js -s TransportU2F -o dist/transport-u2f.js",
    "prepare": "npm run build",
    "build_ledger_monitor": "npm run build && node_modules/.bin/browserify ledgerTest/index.js -o dist/ledgerTest.js -x @bancoin/bancoin-signature-generator -t [ babelify ] -t [browserify-global-shim [\"@bancoin/bancoin-signature-generator\"=\"bancoinSignatureGenerator\"] ]"
  },
  "keywords": [],
  "author": {
    "name": "Bancoin Platform",
    "email": "info@bancoinplatform.com",
    "url": "https://bancoin.io"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.54",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.54",
    "@babel/preset-env": "^7.0.0-beta.54",
    "@babel/runtime": "^7.0.0-beta.54",
    "babel-runtime": "^6.26.0",
    "babelify": "^9.0.0",
    "browserify": "^16.2.3",
    "browserify-global-shim": "^1.0.3",
    "typescript": "^3.2.2",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0"
  },
  "dependencies": {
    "@ledgerhq/hw-transport-u2f": "^4.24.0",
    "babel-polyfill": "^6.26.0"
  }
}
