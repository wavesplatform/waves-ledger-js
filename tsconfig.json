{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "alwaysStrict": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "declaration": true,
    "removeComments": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "strict": true,
    "outDir": "lib",
    "lib": ["es6", "es7", "dom", "es5", "es2017.object"],
    "baseUrl": "src",
    "skipLibCheck": true,
    "paths": {
      "app/*": ["./app/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": ["dist", "node_modules"]
}